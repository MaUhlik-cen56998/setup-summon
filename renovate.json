{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "customManagers": [
    {
      "fileMatch": ["^action\\.yml$"],
      "matchStrings": [
        "^\\s*default:\\s*['\"]?(?<depName>v?[0-9]+\\.[0-9]+\\.[0-9]+)['\"]?$"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "cyberark/summon"
    }
  ]
}
