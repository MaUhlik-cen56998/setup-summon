{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^action\\.yml$"
      ],
      "matchStrings": [
        "^\\s*default:\\s*['\"]?(?<depName>cyberark/summon)['\"]?\\s*:\\s*['\"]?(?<currentValue>v?[0-9]+\\.[0-9]+\\.[0-9]+)['\"]?$"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "cyberark/summon"
    }
  ]
}
